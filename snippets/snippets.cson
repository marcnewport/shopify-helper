'.liquid, .json':

  # ----------------------------------
  # text
  # ----------------------------------
  'Shopify text':
    'prefix': 'text'
    'body': """
{
  "type": "text",
  "id": "${1:id}",
  "label": "${2:label}",
  "default": "${3:default}",
  "info": "${4:info}",
  "placeholder": "${5:placeholder}"
}
    """

  # ----------------------------------
  # Textarea
  # ----------------------------------
  'Shopify textarea':
    'prefix': 'textarea'
    'body': """
{
  "type": "textarea",
  "id": "${1:id}",
  "label": "${2:label}",
  "default": "${3:default}",
  "info": "${4:info}",
  "placeholder": "${5:placeholder}"
}
    """

  # ----------------------------------
  # image picker
  # ----------------------------------
  'Shopify image picker':
    'prefix': 'image picker'
    'body': """
{
  "type": "image_picker",
  "id": "${1:id}",
  "label": "${2:label}"
}
    """

  # ----------------------------------
  # radio
  # ----------------------------------
  'Shopify radio':
    'prefix': 'radio'
    'body': """
{
   "type": "radio",
   "id": "${1:id}",
   "label": "${2:label}",
   "default": "${3:default}",
   "options": [
      {
        "value": "${4:option_value}",
        "label": "${5:option_label}"
      },
      {
        "value": "${6:option_value}",
        "label": "${7:option_label}"
      },
      {
        "value": "${8:option_value}",
        "label": "${9:option_label}"
      }
   ],
   "info": "${10:info}"
}
    """

  # ----------------------------------
  # select
  # ----------------------------------
  'Shopify select':
    'prefix': 'select'
    'body': """
{
   "type": "select",
   "id": "${1:id}",
   "label": "${2:label}",
   "default": "${3:default}",
   "options": [
      {
        "group": "${4:option_group}",
        "value": "${5:option_value}",
        "label": "${6:option_label}"
      },
      {
        "group": "${7:option_group}",
        "value": "${8:option_value}",
        "label": "${9:option_label}"
      }
   ],
   "info": "${10:info}"
}
    """

